@model Post

<div class="col-lg-6 d-flex align-items-stretch">
    <!-- Blog post-->
    <div class="card mb-5 d-flex flex-column h-auto">
        <a href="/Posts/Detail/@Model.Id">
            <img class="card-img-top img-fluid" src="/Img/@Model.Image" alt="@Model.Name" style="height: 200px; object-fit: cover;" />
        </a>
        <div class="card-body d-flex flex-column">
            <div class="small text-muted">@Model.CreateDate</div>
            <h2 class="card-title h4">@Model.Name</h2>
            <p class="card-text flex-grow-1">@Model.Description</p>
            <a class="btn btn-primary mt-auto" href="/Posts/Detail/@Model.Id">Devamını Oku →</a>
        </div>
    </div>
</div>